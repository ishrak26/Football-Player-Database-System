<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="118.0" prefWidth="555.0" styleClass="root" stylesheets="@../styles/saleConfirmationWindow.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.SaleConfirmationWindowController">
   <children>
      <Label fx:id="playerNameLabel" layoutX="22.0" layoutY="23.0" text="Set a Selling Price for Pierre-Emerick Aubameyang" AnchorPane.leftAnchor="15.0">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="playerPriceTextField" alignment="CENTER" layoutX="334.0" layoutY="21.0" prefHeight="25.0" prefWidth="156.0" promptText="Type a real value (in USD)" />
      <Button fx:id="priceClearButton" layoutX="498.0" layoutY="21.0" mnemonicParsing="false" onAction="#clearPriceTextField" text="Clear" AnchorPane.rightAnchor="15.0" />
      <Button fx:id="confirmSaleButton" layoutX="180.0" layoutY="72.0" mnemonicParsing="false" onAction="#confirmSale" prefHeight="30.0" prefWidth="102.0" text="Confirm Sale" AnchorPane.leftAnchor="180.0" AnchorPane.rightAnchor="273.0">
         <font>
            <Font size="14.0" />
         </font></Button>
      <Button fx:id="undoSaleButton" layoutX="299.0" layoutY="72.0" mnemonicParsing="false" onAction="#undoSale" text="Undo Sale">
         <font>
            <Font size="14.0" />
         </font></Button>
   </children>
</AnchorPane>
